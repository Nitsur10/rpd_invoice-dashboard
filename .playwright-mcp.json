{
  "name": "playwright-mcp",
  "description": "Playwright MCP integration for invoice dashboard",
  "version": "1.0.0",
  "baseUrl": "http://localhost:3002",
  "testDir": "./tests/e2e",
  "browsers": ["chromium", "firefox", "webkit"],
  "viewport": {
    "width": 1280,
    "height": 720
  },
  "screenshots": {
    "mode": "only-on-failure",
    "fullPage": true
  },
  "video": {
    "mode": "retain-on-failure"
  },
  "retries": 2,
  "timeout": 30000,
  "expect": {
    "timeout": 5000
  },
  "projects": [
    {
      "name": "chromium",
      "use": {
        "browserName": "chromium"
      }
    },
    {
      "name": "firefox", 
      "use": {
        "browserName": "firefox"
      }
    },
    {
      "name": "webkit",
      "use": {
        "browserName": "webkit"
      }
    }
  ]
}